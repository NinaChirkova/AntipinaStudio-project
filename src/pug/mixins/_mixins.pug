mixin cardService(img, alt, title)
    .service-card
        .aspect-ratio-box
            img(src="../img/service-cards/"+ img, alt=""+ alt width="390" height="351" class="service-card__bg")
            .aspect-ratio-box-inside
                h3.service-card__title.service-card__title--light
                    | #{title}
                button(class="btn btn--light btn--size btn--mt20 btn--size-small" type="button")
                    | ЗАПИСЬ

mixin cardSertificate(img, alt, title)
    .sertificate-card
        .aspect-ratio-box
            a(href="../img/sertificate/"+ img class="aspect-ratio-box-inside") 
                img(src="../img/sertificate/"+ img, alt=""+ alt width="527" height="368" class="sertificate-card__bg")
                h3.sertificate-card__title.sertificate-card__title--light
                    | #{title}

mixin cardMasters(img1, img2, alt, name, position)
    .masters-card
        .aspect-ratio-box
            picture 
                source(media="(min-width:576px)" srcset="../img/portraits/"+ img2 class="masters-card__bg")
                img(src="../img/portraits/"+ img1, alt=""+ alt width="373" height="519" class="masters-card__bg")
            .aspect-ratio-box-inside                
                .masters-card__name.masters-card__name--light
                    | #{name}
                .masters-card__position.masters-card__position--light
                    | #{position}
                .btn__wrapper--changed
                    button(class="btn btn--light btn--size btn--mt20 btn--size-small" type="button")
                        | ЗАПИСЬ
                    button(class="btn btn--dark btn--size btn--d-none" type="button")
                        | бесплатная консультация

mixin commentCard(text, name, date)
    .comment-card 
        .comment-card__rating 
            .rating-result
                span.active
                span.active
                span.active
                span.active
                span
        .comment-card__text.comment-card__text--dark.comment-card__text--margin
            | #{text}
        .comment-card__name.comment-card__name--margin
            | #{name}
        .comment-card__date
            | #{date}

mixin cardSpecialist(img, name, text, price)
    .specialist-card
        .specialist-card__photo
            .aspect-ratio-box 
                img(src="../img/portraits/"+ img, alt=""+img width='332' height="412" class="aspect-ratio-box-inside" loading="lazy")
        .specialist-card__description
            .specialist-card__name.specialist-card__name--dark
                | #{name}
            .specialist-card__position.specialist-card__position--dark
                | #{text}
            .specialist-card__price.specialist-card__price--margin
                p Цена:
                p #{price}
            .btn__wrapper
                button(class="btn btn--dark btn--mt20 btn--size-narrow" type="button")
                    | ЗАПИСЬ
                button(class="btn btn--light btn--size-narrow" type="button")
                    | консультация