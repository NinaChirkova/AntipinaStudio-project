extends ../layouts/main.pug

block variables 
    -var title = "Татуаж бровей";
    -
        menuAsideItems = [
            {"name": "Брови", "url" : "#"},
            {"name": "Глаза", "url" : "#"},
            {"name": "Губы", "url" : "#"},
            {"name": "Удаление татуажа", "url" : "#"},
            {"name": "Татуировки", "url" : "#"},
            {"name": "Пирсинг", "url" : "#"}
        ];

block content
    .content-container.d-flex.flex-no-wrap
        include ../sections/_nav-aside.pug

        main.content-container__main
            header.header
                .header__img 
                    img(src="../img/big-size/brows-bg.jpg", alt="" class="img img-stopper--changed")

                include ../sections/_contacts.pug

                .header__title
                    h2.title--header.anim-item._anim-no-hide
                        | Татуаж бровей #[br]в Иванове
                    p.title__description.anim-item._anim-no-hide
                        | Ваши ухоженные и естественные брови #[br]24 часа в сутки. Без ежедневных усилий
                    .procedure-description.procedure-description--light.mt-45
                        p.procedure-description__price
                            | Цена:
                            span 5 000 — 7 000 ₽
                        p.procedure-description__duration
                            | Время процедуры: 
                            span ~ 1,5 - 2 часа
                    .btn__wrapper.btn__wrapper--row.btn__wrapper--margin
                        button(class="btn btn--light btn--size-header btn--mt20" type="button")
                            | ЗАПИСЬ
                        button(class="btn btn--dark btn--size-header" type="button")
                            | бесплатная консультация
            
            include ../sections/brows/_services.pug
            include ../sections/brows/_about.pug
            include ../sections/brows/_tatoo-help.pug
            include ../sections/brows/_stages.pug
            include ../sections/makeup/_materials-section.pug
            include ../sections/makeup/_advantages-section.pug
            include ../sections/brows/_answers.pug
            include ../sections/makeup/_procedures.pug
            include ../sections/_footer.pug

    include ../sections/_svg.pug