extends ../layouts/main.pug

block variables 
    -var title = "Main page";
    -
        menuAsideItems = [
            {"name": "Брови", "url" : "#"},
            {"name": "Глаза", "url" : "#"},
            {"name": "Губы", "url" : "#"},
            {"name": "Удаление татуажа", "url" : "#"},
            {"name": "Татуировки", "url" : "#"},
            {"name": "Пирсинг", "url" : "#"}
        ];

block content 

    .content-container.d-flex.flex-no-wrap
        include ../sections/_nav-aside.pug

        main.content-container__main
            header.header
                .header__slider 
                    img(src="../img/big-size/portraite-main-page.jpg", alt="" class="img img-stopper")
                    img(src="../img/big-size/portraite-main-page.jpg", alt="" class="img img-stopper")
                    img(src="../img/big-size/portraite-main-page.jpg", alt="" class="img img-stopper")

                include ../sections/_contacts.pug

                .header__title
                    h2.title--header.anim-item._anim-no-hide
                        | Подчеркнём неуловимое
                    p.title__description.anim-item._anim-no-hide
                        | Подчеркнём притягательность и естественную #[br(class="br-d-none")] красоту вашего лица
            
            include ../sections/_about.pug
            include ../sections/_services.pug
            include ../sections/_sertificates.pug
            include ../sections/_masters.pug
            include ../sections/_comments.pug
            include ../sections/_insta.pug
            include ../sections/_address.pug
            include ../sections/_form.pug

            section.nav-helper.nav-helper--margin
                .nav-helper__item.nav-helper__item--documents
                    span ANTIPINA STUDIO, 2021
                    a(href="#")  Политика конфидециальности
                    a(href="#")  Документы
                .nav-helper__item.nav-helper__item--ancors
                    a(href="#masters") Мастера
                    a(href="#proposals") Акции
                    a(href="#services") Услуги
                    a(href="#comments") отзывы
                    a(href="#contacts") контакты
                .nav-helper__item.nav-helper__item--insta
                    img(src="./img/icons/insta.svg", alt="icon-insta")
                    a(href="#" class="")
                        | Antipinastudio

            

    include ../sections/_svg.pug