extends ../layouts/main.pug

block variables 
    -var title = "Main page";
    -
        menuAsideItems = [
            {"name": "Брови", "url" : "#"},
            {"name": "Глаза", "url" : "#"},
            {"name": "Губы", "url" : "#"},
            {"name": "Удаление татуажа", "url" : "#"},
            {"name": "Татуировки", "url" : "#"},
            {"name": "Пирсинг", "url" : "#"}
        ];

block content 

    .container-content
        nav.nav.nav-aside 
            logo 
                img(src="img/Logo.png" alt="Логотип")
            ul.nav__list 
                for item in menuAsideItems 
                    li.nav__item 
                        a(href="" + item.url class="nav__link")
                            | #{item.name}
        main.container-content__main
            header.header.headder--sticky