extends ../layouts/main.pug

block variables 
    -var title = "Татуаж губ в акварельной технике";
    -
        menuAsideItems = [
            {"name": "Брови", "url" : "#"},
            {"name": "Глаза", "url" : "#"},
            {"name": "Губы", "url" : "#"},
            {"name": "Удаление татуажа", "url" : "#"},
            {"name": "Татуировки", "url" : "#"},
            {"name": "Пирсинг", "url" : "#"}
        ];

block content 

    .content-container.d-flex.flex-no-wrap
        include ../sections/_nav-aside.pug

        main.content-container__main
            header.header
                .header__img 
                    img(src="../img/big-size/watercolor-bg.jpg", alt="" class="img img-stopper")

                include ../sections/_contacts.pug

                .header__title.header__title--width-wider
                    h2.title--header-service.anim-item._anim-no-hide
                        | Татуаж губ в #[br(class="br-d-none-lg")]акварельной технике
                    p.title__description.anim-item._anim-no-hide
                        | Подчеркнём природное совершенство #[br(class="br-d-none-mobile")]форм и нежную соблазнительность цвета
                    .procedure-description.procedure-description--light.mt-45
                        p.procedure-description__price
                            | Цена:
                            span от 5 000  ₽                    
                        p.procedure-description__duration
                            | Время процедуры: 
                            span ~ 1,5 — 2 часа
                    .btn__wrapper.btn__wrapper--row.btn__wrapper--margin
                        button(class="btn btn--light btn--size-header btn--mt20" type="button")
                            | ЗАПИСЬ
                        button(class="btn btn--dark btn--size-header" type="button")
                            | бесплатная консультация
            include ../sections/lips/watercolor/_about.pug
            include ../sections/lips/lipstick/_insta.pug
            section.section-duration.section-duration--grey.section-duration--margin.block--bottom-line
                .section-duration__item
                    p.text--huge 
                        | 3 года
                    p.text.text--standart 
                        | сохраняется результат татуажа
                .section-duration__item
                    p.text--huge 
                        | 1 месяц
                    p.text.text--standart 
                        | Через 1 месяц требуется обязательная коррекция
            section
                ul.list.list--font-light.list--flex.list--line
                    li.list__item.list__item--check.list__item--margin1
                        | Под любые особенности внешности
                    li.list__item.list__item--check.list__item--margin1
                        | Подойдет дамам постарше
                    li.list__item.list__item--check.list__item--margin1
                        | Под любой цвет кожи и волос


            include ../sections/lips/watercolor/_stages.pug
            include ../sections/service/_masters.pug
            include ../sections/_comments.pug
            include ../sections/lips/lipstick/_answers.pug
            include ../sections/lips/watercolor/_form.pug

            include ../sections/_footer.pug

    include ../sections/_svg.pug