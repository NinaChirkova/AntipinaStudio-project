extends ../layouts/main.pug

block variables 
    -var title = "пирсинг";
    -
        menuAsideItems = [
            {"name": "Брови", "url" : "#"},
            {"name": "Глаза", "url" : "#"},
            {"name": "Губы", "url" : "#"},
            {"name": "Удаление татуажа", "url" : "#"},
            {"name": "Татуировки", "url" : "#"},
            {"name": "Пирсинг", "url" : "#"}
        ];

block content
    .content-container.d-flex.flex-no-wrap
        include ../sections/_nav-aside.pug

        main.content-container__main
            header.header
                .header__img 
                    img(src="../img/big-size/tatoo-remove-bg.jpg", alt="" class="img img-stopper--changed")

                include ../sections/_contacts.pug

                .header__title
                    h2.title--header.anim-item._anim-no-hide
                        |Делаем пирсинг #[br]в Иванове
                    p.title__description.anim-item._anim-no-hide
                        | Эпатаж, свобода, самовыражение, красота, #[br(class="br-d-none-lg")]творчество. Поймём ваши мотивы и воплотим #[br(class="br-d-none-lg")]любой образ
                    .procedure-description.procedure-description--light.mt-45
                        p.procedure-description__price
                            | Цена:
                            span от 1 700  ₽                    
                        p.procedure-description__duration
                            | Время процедуры: 
                            span ~ 10 — 60 минут
                    .btn__wrapper.btn__wrapper--row.btn__wrapper--margin
                        button(class="btn btn--light btn--size-header btn--mt20" type="button")
                            | ЗАПИСЬ
                        button(class="btn btn--dark btn--size-header" type="button")
                            | бесплатная консультация
            
            include ../sections/remove/_about.pug
            include ../sections/remove/_advantages-section.pug
            include ../sections/remove/_insta.pug
            include ../sections/remove/_how-we-work.pug
            include ../sections/remove/_pros_cons.pug
            include ../sections/remove/_remove.pug
            include ../sections/remove/_stages.pug
            include ../sections/remove/_tatoo-help.pug
            include ../sections/remove/_masters.pug            
            include ../sections/_comments.pug
            include ../sections/remove/_materials-section.pug

            include ../sections/remove/_form.pug
            include ../sections/_footer.pug

    include ../sections/_svg.pug